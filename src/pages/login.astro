---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { ImprovedLoginForm } from '@/components/auth/ImprovedLoginForm';
import '@/styles/auth-modern.css';
---

<BaseLayout title="Sign In - AstroWeb" description="Sign in to your account">
  <div class="auth-page-modern">
    <div class="grid-background"></div>

    <div class="auth-container-modern">
      <a href="/" class="back-link-modern">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M19 12H5M5 12l7 7M5 12l7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        Back to home
      </a>

      <div class="auth-card-3d">
        <ImprovedLoginForm client:load />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .auth-page-modern {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background: linear-gradient(to bottom, #f0f4f8, #d9e2ec);
    padding: 2rem;
    overflow: hidden;
  }

  .grid-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(rgba(100, 116, 139, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(100, 116, 139, 0.05) 1px, transparent 1px);
    background-size: 50px 50px;
    z-index: 0;
  }

  .auth-container-modern {
    position: relative;
    z-index: 1;
    max-width: 480px;
    width: 100%;
  }

  .back-link-modern {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    text-decoration: none;
    font-size: 0.875rem;
    margin-bottom: 2rem;
    transition: color 0.2s;
    font-weight: 500;
  }

  .back-link-modern:hover {
    color: #3B82F6;
  }

  .auth-card-3d {
    background: white;
    border-radius: 24px;
    padding: 3rem 2.5rem;
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    transform: translateY(0);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .auth-card-3d:hover {
    transform: translateY(-4px);
    box-shadow:
      0 25px 50px -12px rgba(0, 0, 0, 0.15),
      0 12px 15px -5px rgba(0, 0, 0, 0.08),
      0 0 0 1px rgba(0, 0, 0, 0.05);
  }

  @media (max-width: 640px) {
    .auth-page-modern {
      padding: 1rem;
    }

    .auth-card-3d {
      padding: 2rem 1.5rem;
      border-radius: 16px;
    }

    .back-link-modern {
      margin-bottom: 1.5rem;
    }
  }
</style>
</BaseLayout>
