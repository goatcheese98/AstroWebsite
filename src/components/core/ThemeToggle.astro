<!-- Theme toggle disabled - light mode only -->
<div
  class="theme-toggle theme-toggle--disabled"
  aria-label="Light mode active"
  title="Light mode"
>
  <svg class="icon-moon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
  </svg>
</div>

<style>
  .theme-toggle {
    background: var(--color-surface);
    border: 2px solid var(--color-stroke);
    border-radius: var(--radius-md);
    color: var(--color-text);
    padding: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    filter: url(#sketch-filter);
    transition: transform 0.15s ease, background-color 200ms ease-out;
    position: relative;
  }
  .theme-toggle--disabled {
    cursor: default;
    opacity: 0.7;
  }
  .theme-toggle--disabled:hover {
    /* No hover effect when disabled */
  }

  /* Mobile/Touch: Disable expensive filter */
  @media (hover: none) and (pointer: coarse) {
    .theme-toggle {
      filter: none;
      border-radius: var(--radius-md) var(--radius-sm) var(--radius-md) var(--radius-sm);
    }
  }
</style>
