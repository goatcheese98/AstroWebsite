---
import ThemeToggle from "./ThemeToggle.astro";
import { UserMenu } from "../auth/UserMenu";
import { NAV_LINKS, CANVAS_NAV_LINKS } from "../../lib/constants";

const currentPath = Astro.url.pathname;
const hostname = Astro.url.hostname;

// Canvas-only mode: only true when on canvas.rohanjasani.com subdomain
// NOT when on main site at /ai-canvas
const isCanvasOnly =
  hostname === "canvas.rohanjasani.com" || hostname.startsWith("canvas.");

const links = isCanvasOnly ? CANVAS_NAV_LINKS : NAV_LINKS;
---

<header class="header">
  <nav class="header__nav container" aria-label="Main navigation">
    <a href="/" class="header__logo">
      <span class="header__logo-text">RJ</span>
      <span class="header__logo-dot"></span>
    </a>

    <ul class="header__links" role="list">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={[
                "header__link",
                {
                  active:
                    currentPath === link.href ||
                    (link.href !== "/" && currentPath.startsWith(link.href)),
                },
              ]}
            >
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>

    <div class="header__actions">
      <UserMenu client:only="react" />
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    background: rgba(var(--color-bg-rgb), 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-stroke-muted);
    transition:
      background 0.3s ease,
      box-shadow 0.3s ease;
  }

  .header__nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-block: var(--space-sm);
    gap: var(--space-md);
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .header__logo {
    display: flex;
    align-items: center;
    gap: 2px;
    font-family: var(--font-hand);
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
    letter-spacing: -0.02em;
    position: relative;
    transition: transform 0.2s ease;
  }

  .header__logo:hover {
    text-decoration: none;
    transform: rotate(-2deg) scale(1.05);
  }

  .header__logo-text {
    background: linear-gradient(
      135deg,
      var(--color-accent),
      var(--color-gradient-end)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .header__logo-dot {
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    border-radius: 50%;
    animation: logo-pulse 2s ease-in-out infinite;
  }

  @keyframes logo-pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.7;
    }
  }

  .header__links {
    display: flex;
    gap: var(--space-xs);
    background: var(--color-surface);
    padding: var(--space-xs);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-stroke-muted);
  }

  .header__link {
    font-family: var(--font-hand);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
    position: relative;
  }

  .header__link:hover {
    color: var(--color-text);
    text-decoration: none;
    background: var(--color-bg);
  }

  .header__link.active {
    color: var(--color-text);
    background: var(--color-fill-1);
    font-weight: 600;
  }

  @media (max-width: 640px) {
    .header__nav {
      padding-block: var(--space-xs);
    }

    .header__links {
      gap: 0;
    }

    .header__link {
      font-size: var(--text-xs);
      padding: var(--space-2xs) var(--space-xs);
    }

    .header__actions {
      gap: var(--space-xs);
    }
  }
</style>
