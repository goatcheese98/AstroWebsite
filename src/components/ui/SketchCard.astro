---
interface Props {
  class?: string;
  hoverAccent?: string;
}

const { class: className = '', hoverAccent = 'var(--color-accent)' } = Astro.props;
---

<div class={`sketch-card ${className}`} style={`--hover-accent: ${hoverAccent}`}>
  <div class="sketch-card__accent" aria-hidden="true"></div>
  <div class="sketch-card__content">
    <slot />
  </div>
</div>

<style>
  .sketch-card {
    position: relative;
    background: var(--color-surface);
    border: 2px solid var(--color-stroke);
    border-radius: var(--radius-md);
    filter: url(#sketch-filter);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    overflow: hidden;
  }

  .sketch-card__accent {
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--hover-accent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .sketch-card:hover {
    transform: translateX(4px);
    box-shadow: var(--shadow-md);
  }

  .sketch-card:hover .sketch-card__accent {
    opacity: 1;
  }

  .sketch-card__content {
    position: relative;
    z-index: 1;
  }

  /* Mobile: Simplify hover effects */
  @media (max-width: 640px) {
    .sketch-card:hover {
      transform: none;
    }
  }

  /* Touch devices: Disable filter */
  @media (hover: none) and (pointer: coarse) {
    .sketch-card {
      filter: none;
      border-radius: 10px 8px 12px 9px;
    }
  }
</style>
