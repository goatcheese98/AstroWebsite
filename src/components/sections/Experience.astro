---
import SectionHeader from "../ui/SectionHeader.astro";
import SketchHighlight from "../sketch/SketchHighlight.astro";
import { EXPERIENCES } from "../../lib/constants";

const LOGO_FILES: Record<string, string> = {
  ubc: '/logos/UBC.png',
  goldman: '/logos/Goldman.jpeg',
  megaplex: '/logos/megaplex.jpeg',
};
---

<section class="experience section-gap" id="experience" aria-label="Experience">
  <div class="container">
    <SectionHeader title="Experience" subtitle="Where I've worked." />

    <div class="timeline">
      {
        EXPERIENCES.map((exp) => (
          <article class="timeline__item">
            <div class="timeline__marker" aria-hidden="true">
              <div
                class:list={[
                  "timeline__dot",
                  { "timeline__dot--active": exp.current },
                ]}
                style={exp.accentColor ? `--dot-color: ${exp.accentColor}` : ''}
              >
                {exp.current && <span class="timeline__pulse" style={exp.accentColor ? `--pulse-color: ${exp.accentColor}` : ''} />}
              </div>
              <div class="timeline__line" />
            </div>
            <div 
              class="sketch-card timeline__card" 
              style={`--hover-accent: ${exp.accentColor || 'var(--color-accent)'}`}
            >
              <div class="sketch-card__accent" aria-hidden="true"></div>
              <div class="timeline__content">
                <div class="timeline__header">
                  <div class="timeline__title-group">
                    <h3 class="timeline__role">
                      {exp.current ? (
                        <SketchHighlight>{exp.role}</SketchHighlight>
                      ) : (
                        exp.role
                      )}
                    </h3>
                    <div class="timeline__company-row">
                      {exp.logo && (
                        <span class="timeline__logo-wrapper">
                          <img 
                            src={LOGO_FILES[exp.logo]}
                            alt=""
                            class="timeline__logo"
                            width="20"
                            height="20"
                          />
                        </span>
                      )}
                      <p class="timeline__company">{exp.company}</p>
                    </div>
                  </div>
                  <span class="timeline__period">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                      <line x1="16" y1="2" x2="16" y2="6" />
                      <line x1="8" y1="2" x2="8" y2="6" />
                      <line x1="3" y1="10" x2="21" y2="10" />
                    </svg>
                    {exp.period}
                  </span>
                </div>
                <p class="timeline__desc">{exp.description}</p>
                <ul class="timeline__highlights">
                  {exp.highlights.map((highlight) => (
                    <li class="timeline__highlight">
                      <span class="highlight__bullet" />
                      {highlight}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .timeline {
    position: relative;
    max-width: 800px;
    margin-inline: auto;
  }

  .timeline__item {
    position: relative;
    padding-left: 60px;
    padding-bottom: var(--space-xl);
    display: flex;
  }

  .timeline__item:last-child {
    padding-bottom: 0;
  }

  .timeline__item:last-child .timeline__line {
    display: none;
  }

  .timeline__marker {
    position: absolute;
    left: 0;
    top: 8px;
    width: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .timeline__dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 3px solid var(--color-stroke-muted);
    background: var(--color-bg);
    filter: url(#sketch-filter);
    position: relative;
    z-index: 2;
    transition: border-color 0.3s ease, background 0.3s ease;
  }

  .timeline__dot--active {
    background: var(--dot-color, var(--color-accent));
    border-color: var(--dot-color, var(--color-accent));
    box-shadow: 0 0 0 4px var(--pulse-color, var(--color-accent-glow));
  }

  .timeline__pulse {
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid var(--pulse-color, var(--color-accent));
    animation: pulse-ring 2s ease-out infinite;
  }

  @keyframes pulse-ring {
    0% { transform: scale(1); opacity: 1; }
    100% { transform: scale(1.8); opacity: 0; }
  }

  .timeline__line {
    width: 2px;
    flex: 1;
    background: linear-gradient(to bottom, var(--color-stroke-muted), transparent);
    margin-top: var(--space-sm);
    min-height: 40px;
  }

  .timeline__card {
    flex: 1;
    padding: var(--space-lg);
  }

  .timeline__content {
    position: relative;
    z-index: 1;
  }

  .timeline__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .timeline__title-group {
    flex: 1;
    min-width: 0;
  }

  .timeline__role {
    font-family: var(--font-hand);
    font-size: var(--text-xl);
    margin-bottom: var(--space-xs);
    line-height: 1.3;
  }

  .timeline__company-row {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .timeline__logo-wrapper {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    flex-grow: 0;
    overflow: hidden;
    border-radius: 3px;
    background: var(--color-bg);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .timeline__logo {
    width: 20px;
    height: 20px;
    object-fit: contain;
    display: block;
  }

  .timeline__company {
    font-family: var(--font-hand);
    font-size: var(--text-base);
    color: var(--hover-accent, var(--color-accent));
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .timeline__period {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    background: var(--color-bg);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-stroke-muted);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .timeline__desc {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: var(--space-md);
  }

  .timeline__highlights {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .timeline__highlight {
    font-size: var(--text-sm);
    color: var(--color-text);
    padding-left: 1.5em;
    position: relative;
    line-height: 1.6;
    transition: all 0.15s ease;
    padding: var(--space-xs) var(--space-xs) var(--space-xs) 1.5em;
    border-radius: var(--radius-sm);
    margin-left: -0.5em;
  }

  .timeline__highlight:hover {
    background: var(--color-bg);
    color: var(--hover-accent, var(--color-accent));
  }

  .highlight__bullet {
    position: absolute;
    left: 0.25em;
    top: 0.65em;
    width: 8px;
    height: 8px;
    background: var(--hover-accent, var(--color-accent));
    border-radius: 50%;
    filter: url(#sketch-filter);
    transition: transform 0.15s ease;
  }

  .timeline__highlight:hover .highlight__bullet {
    transform: scale(1.2);
  }

  @media (max-width: 640px) {
    .timeline__item {
      padding-left: 40px;
    }

    .timeline__marker {
      width: 30px;
    }

    .timeline__header {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .timeline__period {
      align-self: flex-start;
    }

    .timeline__card {
      padding: var(--space-md);
    }

    .timeline__highlight {
      margin-left: 0;
      padding-left: 1.5em;
    }

    .highlight__bullet {
      left: 0.25em;
    }
  }
</style>
