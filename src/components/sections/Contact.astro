---
import SketchBox from "../sketch/SketchBox.astro";
import SketchButton from "../ui/SketchButton.astro";
import { SITE } from "../../lib/constants";
---

<section class="contact section-gap" id="contact" aria-label="Contact">
  <div class="container">
    <div class="contact__wrapper reveal-scale">
      <div class="contact__deco contact__deco--left" aria-hidden="true">
        <svg width="100" height="200" viewBox="0 0 100 200" fill="none">
          <circle cx="20" cy="40" r="8" fill="var(--color-fill-1)" opacity="0.5"
          ></circle>
          <circle
            cx="60"
            cy="80"
            r="12"
            fill="var(--color-fill-3)"
            opacity="0.4"></circle>
          <circle
            cx="30"
            cy="140"
            r="10"
            fill="var(--color-fill-4)"
            opacity="0.4"></circle>
          <path
            d="M80,20 Q90,50 70,80 T80,140"
            stroke="var(--color-accent)"
            stroke-width="2"
            fill="none"
            opacity="0.2"
            stroke-dasharray="4 4"></path>
        </svg>
      </div>

      <SketchBox class="contact__card" fillColor="var(--color-fill-1)">
        <div class="contact__inner">
          <div class="contact__icon" aria-hidden="true">
            <svg
              width="48"
              height="48"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <h2 class="contact__heading">
            <span class="gradient-text">Let's Connect</span>
          </h2>
          <p class="contact__text">
            Interested in discussing data analytics, product insights, or
            opportunities? I'm always open to meaningful conversations.
          </p>
          <div class="contact__actions">
            {
              SITE.socialLinks.email && (
                <SketchButton href={SITE.socialLinks.email} class="btn-shine">
                  <svg
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                    <polyline points="22,6 12,13 2,6" />
                  </svg>
                  Email Me
                </SketchButton>
              )
            }
            {
              SITE.socialLinks.github && (
                <SketchButton
                  href={SITE.socialLinks.github}
                  variant="secondary"
                  target="_blank"
                  rel="noopener"
                >
                  <svg
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                  GitHub
                </SketchButton>
              )
            }
            {
              SITE.socialLinks.linkedin && (
                <SketchButton
                  href={SITE.socialLinks.linkedin}
                  variant="secondary"
                  target="_blank"
                  rel="noopener"
                >
                  <svg
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227.792 24 1.771 24h.003z" />
                  </svg>
                  LinkedIn
                </SketchButton>
              )
            }
          </div>
        </div>
      </SketchBox>

      <div class="contact__deco contact__deco--right" aria-hidden="true">
        <svg width="100" height="200" viewBox="0 0 100 200" fill="none">
          <circle
            cx="80"
            cy="60"
            r="10"
            fill="var(--color-fill-2)"
            opacity="0.4"></circle>
          <circle
            cx="40"
            cy="120"
            r="8"
            fill="var(--color-fill-5)"
            opacity="0.5"></circle>
          <circle
            cx="70"
            cy="170"
            r="12"
            fill="var(--color-fill-3)"
            opacity="0.4"></circle>
          <path
            d="M20,30 Q10,70 30,110 T20,180"
            stroke="var(--color-gradient-end)"
            stroke-width="2"
            fill="none"
            opacity="0.2"
            stroke-dasharray="4 4"></path>
        </svg>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    position: relative;
  }

  .contact__wrapper {
    position: relative;
    max-width: 850px;
    margin-inline: auto;
  }

  .contact__deco {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    opacity: 0.6;
  }

  .contact__deco--left {
    left: -120px;
  }

  .contact__deco--right {
    right: -120px;
  }

  .contact__card {
    position: relative;
    z-index: 1;
  }

  .contact__card::after {
    content: "";
    position: absolute;
    inset: -2px;
    background: linear-gradient(
      135deg,
      var(--color-accent),
      var(--color-gradient-end)
    );
    border-radius: calc(var(--radius-md) + 2px);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .contact__card:hover::after {
    opacity: 0.3;
  }

  .contact__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--space-lg) var(--space-xl);
    text-align: center;
  }

  .contact__icon {
    color: var(--color-accent);
    margin-bottom: var(--space-md);
    animation: float-icon 3s ease-in-out infinite;
  }

  @keyframes float-icon {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  .contact__heading {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-sm);
  }

  .contact__text {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.6;
    max-width: 600px;
    margin-bottom: var(--space-lg);
  }

  .contact__actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Animation */
  .reveal-scale {
    opacity: 0;
    transform: scale(0.95);
    transition:
      opacity 0.7s ease,
      transform 0.7s ease;
  }

  .reveal-scale.visible {
    opacity: 1;
    transform: scale(1);
  }

  @media (max-width: 900px) {
    .contact__deco {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .contact__inner {
      padding: var(--space-lg);
    }

    .contact__actions {
      flex-direction: column;
      align-items: stretch;
    }

    .contact__actions :global(.sketch-btn) {
      justify-content: center;
    }
  }
</style>
