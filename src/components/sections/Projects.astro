---
import SketchBox from "../sketch/SketchBox.astro";
import SketchBadge from "../ui/SketchBadge.astro";
import SketchButton from "../ui/SketchButton.astro";
import { PROJECTS } from "../../lib/constants";
---

<section class="projects section-gap" id="projects" aria-label="Projects">
  <div class="container">
    <div class="projects__header">
      <h2 class="projects__heading">
        <span class="gradient-text">Projects</span>
      </h2>
      <p class="projects__subhead">A few things I've built.</p>
      <div class="projects__header-line" aria-hidden="true"></div>
    </div>

    <div class="projects__grid stagger-children">
      {
        PROJECTS.map((project, index) => {
          const isAstroWeb = project.title.toLowerCase().includes("astroweb");
          return (
            <article
              class={`project-card-wrapper ${isAstroWeb ? "visible" : "reveal-scale"}`}
              style={isAstroWeb ? "" : `transition-delay: ${index * 100}ms`}
            >
              <SketchBox class="project-card" fillColor={project.fillColor}>
                <div class="project-card__inner">
                  <div class="project-card__top">
                    {project.featured && (
                      <span class="project-card__featured">
                        <span class="featured__star">â˜…</span>
                        Featured
                      </span>
                    )}
                    <h3 class="project-card__title">{project.title}</h3>
                    <p class="project-card__desc">{project.description}</p>
                  </div>

                  <div class="project-card__bottom">
                    <div class="project-card__tags">
                      {project.tags.map((tag) => (
                        <SketchBadge>{tag}</SketchBadge>
                      ))}
                    </div>
                    <div class="project-card__links">
                      {project.demoUrl && (
                        <SketchButton
                          href={project.demoUrl}
                          size="sm"
                          target="_blank"
                          rel="noopener"
                        >
                          <svg
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                          >
                            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                            <polyline points="15 3 21 3 21 9" />
                            <line x1="10" y1="14" x2="21" y2="3" />
                          </svg>
                          Demo
                        </SketchButton>
                      )}
                      {project.codeUrl && (
                        <SketchButton
                          href={project.codeUrl}
                          variant="secondary"
                          size="sm"
                          target="_blank"
                          rel="noopener"
                        >
                          <svg
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                          >
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                          </svg>
                          Code
                        </SketchButton>
                      )}
                    </div>
                  </div>
                </div>
              </SketchBox>
            </article>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  .projects__header {
    text-align: center;
    margin-bottom: var(--space-xl);
    position: relative;
  }

  .projects__heading {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-sm);
  }

  .projects__subhead {
    font-family: var(--font-hand);
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
  }

  .projects__header-line {
    width: 60px;
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--color-accent),
      var(--color-gradient-end)
    );
    border-radius: 2px;
    margin: 0 auto;
    filter: url(#sketch-filter);
  }

  .projects__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(min(100%, 340px), 1fr));
    gap: var(--space-xl);
  }

  .project-card-wrapper {
    height: 100%;
  }

  .project-card {
    height: 100%;
    transition:
      transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1),
      box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-8px) rotate(-0.5deg);
  }

  .project-card__inner {
    display: flex;
    flex-direction: column;
    height: 100%;
    gap: var(--space-md);
  }

  .project-card__top {
    flex: 1;
  }

  .project-card__bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .project-card__featured {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-hand);
    font-size: var(--text-xs);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 600;
    margin-bottom: var(--space-sm);
  }

  .featured__star {
    animation: star-pulse 2s ease-in-out infinite;
  }

  @keyframes star-pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
  }

  .project-card__title {
    font-family: var(--font-hand);
    font-size: var(--text-xl);
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }

  .project-card__desc {
    color: var(--color-text-muted);
    font-size: var(--text-base);
    line-height: 1.7;
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .project-card__links {
    display: flex;
    gap: var(--space-sm);
    padding-top: var(--space-sm);
    border-top: 1px solid var(--color-stroke-muted);
  }

  /* Card entrance animation */
  .project-card-wrapper {
    opacity: 0;
    transform: scale(0.95);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
  }

  .project-card-wrapper.visible {
    opacity: 1;
    transform: scale(1);
  }

  @media (max-width: 768px) {
    .projects__grid {
      gap: var(--space-lg);
    }
  }
</style>
