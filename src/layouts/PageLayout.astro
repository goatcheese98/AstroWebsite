---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/core/Header.astro";
import Footer from "../components/core/Footer.astro";
import SkipLink from "../components/core/SkipLink.astro";
import SketchControls from "../components/islands/SketchControls.svelte";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;

// Check if current page is canvas or dashboard
const pathname = Astro.url.pathname;
const isCanvasPage = pathname === "/ai-canvas" || pathname.startsWith("/canvas") || pathname.startsWith("/dashboard");
---

<BaseLayout title={title} description={description} ogImage={ogImage}>
  <SkipLink />
  <Header />
  <main id="main-content">
    <slot />
  </main>
  <Footer />
  {!isCanvasPage && <SketchControls client:load />}
</BaseLayout>

<style>
  main {
    flex: 1;
  }
  :global(body) {
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
  }
</style>
