---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/core/Header.astro';
import Footer from '../components/core/Footer.astro';
import SkipLink from '../components/core/SkipLink.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
---

<BaseLayout title={title} description={description} ogImage={ogImage}>
  <SkipLink />
  <Header />
  <main id="main-content" transition:name="main-content">
    <slot />
  </main>
  <Footer />
</BaseLayout>

<style>
  main {
    flex: 1;
  }
  :global(body) {
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
  }
</style>
