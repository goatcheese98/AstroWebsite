---
import { ClientRouter } from 'astro:transitions';
import '../styles/sketch-theme.css';
import '../styles/global.css';
import '../styles/animations.css';
import '../styles/utilities.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
const siteTitle = title ? `${title} | Rohan Jasani` : 'Rohan Jasani';
const siteDescription = description || 'Personal portfolio of Rohan Jasani â€” developer, builder, thinker.';
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://rohanjasani.dev');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Font preloading -->
    <link rel="preload" href="/fonts/Excalifont-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Virgil.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/ComicShanns-Regular.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Open Graph -->
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDescription} />

    <!-- Theme color -->
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#121212" media="(prefers-color-scheme: dark)" />

    <ClientRouter />

    <!-- Inline theme init to prevent FOUC -->
    <script is:inline>
      (function() {
        var saved = localStorage.getItem('theme');
        var preferred = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        document.documentElement.setAttribute('data-theme', saved || preferred);
      })();
    </script>
  </head>
  <body>
    <!-- SVG filter for hand-drawn borders (zero JS) -->
    <svg style="position: absolute; width: 0; height: 0;" aria-hidden="true">
      <filter id="sketch-filter">
        <feTurbulence type="turbulence" baseFrequency="0.02" numOctaves="3" seed="2" />
        <feDisplacementMap in="SourceGraphic" scale="3" />
      </filter>
      <filter id="sketch-filter-strong">
        <feTurbulence type="turbulence" baseFrequency="0.03" numOctaves="4" seed="5" />
        <feDisplacementMap in="SourceGraphic" scale="5" />
      </filter>
    </svg>

    <slot />
  </body>
</html>
