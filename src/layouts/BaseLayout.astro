---
import "../styles/sketch-theme.css";
import "../styles/global.css";
import "../styles/animations.css";
import "../styles/utilities.css";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
const siteTitle = title ? `${title} | Rohan Jasani` : "Rohan Jasani";
const siteDescription =
  description ||
  "Personal portfolio of Rohan Jasani â€” Business Analyst | Data-Driven Problem Solver | UBC MBAN Candidate";
const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || "https://rohanjasani.dev",
);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Font preloading -->
    <link
      rel="preload"
      href="/fonts/Excalifont-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Virgil.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/ComicShanns-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Open Graph -->
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDescription} />

    <!-- Theme color -->
    <meta name="theme-color" content="#faf8f5" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#121212" media="(prefers-color-scheme: dark)" />

    <!-- Inline theme init - respects user preference on main site, light mode on canvas -->
    <script is:inline>
      (function () {
        var hostname = window.location.hostname;
        var pathname = window.location.pathname;
        var isCanvas = hostname.includes('canvas.') || pathname === '/ai-canvas';
        
        if (isCanvas) {
          // Force light mode on canvas pages
          document.documentElement.setAttribute('data-theme', 'light');
        } else {
          // Use saved preference or system preference on main site
          var saved = localStorage.getItem('theme');
          var preferred = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
          document.documentElement.setAttribute('data-theme', saved || preferred);
        }
      })();
    </script>
  </head>
  <body>
    <!-- SVG filter for hand-drawn borders - disabled on mobile for performance -->
    <svg style="position: absolute; width: 0; height: 0;" aria-hidden="true">
      <filter id="sketch-filter" x="-20%" y="-20%" width="140%" height="140%">
        <feTurbulence
          type="turbulence"
          baseFrequency="0.02"
          numOctaves="3"
          seed="2"
          result="turbulence"></feTurbulence>
        <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="3" xChannelSelector="R" yChannelSelector="G"></feDisplacementMap>
      </filter>
      <filter id="sketch-filter-strong" x="-20%" y="-20%" width="140%" height="140%">
        <feTurbulence
          type="turbulence"
          baseFrequency="0.03"
          numOctaves="4"
          seed="5"
          result="turbulence"></feTurbulence>
        <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="5" xChannelSelector="R" yChannelSelector="G"></feDisplacementMap>
      </filter>
    </svg>

    <slot />
  </body>
</html>
