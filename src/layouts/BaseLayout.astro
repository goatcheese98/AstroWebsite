---
import "../styles/sketch-theme.css"; /* Clean system fonts, updated colors */
import "../styles/global.css";
import "../styles/animations.css";
import "../styles/utilities.css";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
const siteTitle = title ? `${title} | Rohan Jasani` : "Rohan Jasani";
const siteDescription =
  description ||
  "Personal portfolio of Rohan Jasani â€” Business Analyst | Data-Driven Problem Solver | UBC MBAN Candidate";
const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || "https://rohanjasani.dev",
);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{siteTitle}</title>
    <meta name="description" content={siteDescription} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- System fonts - using native OS fonts for clean aesthetic -->

    <!-- Open Graph -->
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDescription} />

    <!-- Theme color -->
    <meta
      name="theme-color"
      content="#faf8f5"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#121212"
      media="(prefers-color-scheme: dark)"
    />

    <!-- Inline theme init - respects user preference on main site, light mode on canvas -->
    <script is:inline>
      (function () {
        var hostname = window.location.hostname;
        var pathname = window.location.pathname;
        var isCanvas =
          hostname.includes("canvas.") || pathname === "/ai-canvas";

        if (isCanvas) {
          // Force light mode on canvas pages
          document.documentElement.setAttribute("data-theme", "light");
          document.documentElement.classList.remove("dark");
          document.documentElement.classList.add("light");

          // Prevent theme changes on canvas
          Object.defineProperty(window, "__CANVAS_LIGHT_MODE__", {
            value: true,
            writable: false,
            configurable: false,
          });

          // Watch for any attempts to change theme and revert them
          var observer = new MutationObserver(function (mutations) {
            mutations.forEach(function (mutation) {
              if (
                mutation.attributeName === "data-theme" ||
                mutation.attributeName === "class"
              ) {
                var currentTheme =
                  document.documentElement.getAttribute("data-theme");
                if (currentTheme !== "light") {
                  document.documentElement.setAttribute("data-theme", "light");
                }
                document.documentElement.classList.remove("dark");
                document.documentElement.classList.add("light");
              }
            });
          });
          observer.observe(document.documentElement, { attributes: true });
        } else {
          // Use saved preference or system preference on main site
          var saved = localStorage.getItem("theme");
          var preferred = window.matchMedia("(prefers-color-scheme: dark)")
            .matches
            ? "dark"
            : "light";
          document.documentElement.setAttribute(
            "data-theme",
            saved || preferred,
          );
        }
      })();
    </script>

    <!-- Force light mode styles on canvas pages -->
    <style is:inline>
      /* Override any dark mode styles on canvas pages */
      html[data-theme="light"] {
        color-scheme: light !important;
      }

      html[data-theme="light"] body {
        background: #ffffff !important;
        color: #000000 !important;
      }
    </style>
  </head>
  <body>
    <slot />

    <!-- Scroll reveal animation script -->
    <script>
      function initRevealAnimations() {
        const revealElements = document.querySelectorAll(
          ".reveal, .reveal-scale, .reveal-left, .reveal-right, .stagger-children",
        );

        if (revealElements.length === 0) return;

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("visible");
                // Optionally unobserve after animation
                observer.unobserve(entry.target);
              }
            });
          },
          {
            threshold: 0.1,
            rootMargin: "0px 0px -50px 0px",
          },
        );

        revealElements.forEach((el) => observer.observe(el));
      }

      // Run on page load
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initRevealAnimations);
      } else {
        initRevealAnimations();
      }

      // Re-init after view transitions
      document.addEventListener("astro:page-load", initRevealAnimations);
    </script>
  </body>
</html>
