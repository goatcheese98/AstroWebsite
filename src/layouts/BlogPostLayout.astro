---
import PageLayout from './PageLayout.astro';
import TableOfContents from '../components/blog/TableOfContents.astro';
import SketchBadge from '../components/ui/SketchBadge.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  headings?: { depth: number; slug: string; text: string }[];
}

const { title, description, pubDate, updatedDate, tags = [], headings = [] } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
const formattedUpdate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<PageLayout title={title} description={description}>
  <article class="blog-post container section-gap">
    <header class="blog-post__header">
      <div class="blog-post__meta">
        <time datetime={pubDate.toISOString()} class="text-sm text-muted">
          {formattedDate}
        </time>
        {updatedDate && (
          <span class="text-sm text-muted">
            (Updated: <time datetime={updatedDate.toISOString()}>{formattedUpdate}</time>)
          </span>
        )}
      </div>
      <h1 class="blog-post__title text-2xl">{title}</h1>
      <p class="blog-post__desc text-lg text-muted">{description}</p>
      {tags.length > 0 && (
        <div class="blog-post__tags">
          {tags.map((tag) => (
            <SketchBadge>{tag}</SketchBadge>
          ))}
        </div>
      )}
    </header>

    <TableOfContents headings={headings} />

    <div class="prose">
      <slot />
    </div>

    <footer class="blog-post__footer">
      <a href="/blog" class="text-hand">&larr; Back to all posts</a>
    </footer>
  </article>
</PageLayout>

<style>
  .blog-post {
    max-width: 750px;
  }

  .blog-post__header {
    margin-bottom: var(--space-xl);
  }

  .blog-post__meta {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
    font-family: var(--font-mono);
  }

  .blog-post__title {
    margin-top: var(--space-sm);
  }

  .blog-post__desc {
    margin-top: var(--space-xs);
    line-height: 1.6;
  }

  .blog-post__tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
    margin-top: var(--space-sm);
  }

  .blog-post__footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 2px solid var(--color-stroke-muted);
    filter: url(#sketch-filter);
  }

  /* Blog prose styling */
  .prose {
    line-height: 1.8;
  }

  .prose :global(h2) {
    font-size: var(--text-xl);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
  }

  .prose :global(h3) {
    font-size: var(--text-lg);
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .prose :global(p) {
    margin-bottom: var(--space-md);
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-decoration-style: wavy;
    text-underline-offset: 3px;
    text-decoration-thickness: 1.5px;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: 1.5em;
  }

  .prose :global(ul) {
    list-style: none;
  }

  .prose :global(ul li) {
    position: relative;
    padding-left: 1em;
    margin-bottom: var(--space-xs);
  }

  .prose :global(ul li::before) {
    content: '~';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-family: var(--font-hand);
  }

  .prose :global(ol) {
    list-style: decimal;
  }

  .prose :global(ol li) {
    margin-bottom: var(--space-xs);
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: var(--color-surface);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-stroke-muted);
  }

  .prose :global(pre) {
    background: var(--color-surface);
    border: 2px solid var(--color-stroke-muted);
    border-radius: var(--radius-md);
    padding: var(--space-md);
    overflow-x: auto;
    margin-bottom: var(--space-md);
    filter: url(#sketch-filter);
  }

  .prose :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    font-size: var(--text-sm);
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--space-md);
    margin-bottom: var(--space-md);
    color: var(--color-text-muted);
    font-style: italic;
    font-family: var(--font-hand);
  }

  .prose :global(img) {
    border-radius: var(--radius-md);
    border: 2px solid var(--color-stroke-muted);
    filter: url(#sketch-filter);
    transform: rotate(-0.5deg);
    margin-block: var(--space-md);
  }

  .prose :global(hr) {
    border: none;
    border-top: 2px solid var(--color-stroke-muted);
    margin-block: var(--space-xl);
    filter: url(#sketch-filter);
  }

  .prose :global(strong) {
    font-weight: 700;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: var(--space-md);
    font-size: var(--text-sm);
  }

  .prose :global(th),
  .prose :global(td) {
    border: 1.5px solid var(--color-stroke-muted);
    padding: var(--space-sm);
    text-align: left;
  }

  .prose :global(th) {
    font-family: var(--font-hand);
    background: var(--color-surface);
  }
</style>
