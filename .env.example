# Anthropic API Key
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Google Gemini API Key (for AI image generation)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Resend API Key for sending emails
# Get your API key from: https://resend.com/
RESEND_API_KEY=your_resend_api_key_here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10

# PartyKit Configuration (for real-time collaboration)
# After deploying your PartyKit server, add the host URL here
# Example: PUBLIC_PARTYKIT_HOST=astroweb-excalidraw.yourusername.partykit.dev
PUBLIC_PARTYKIT_HOST=

# Better Auth Configuration
BETTER_AUTH_SECRET=your_random_secret_at_least_32_chars
BETTER_AUTH_URL=http://localhost:4321

# Google OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
